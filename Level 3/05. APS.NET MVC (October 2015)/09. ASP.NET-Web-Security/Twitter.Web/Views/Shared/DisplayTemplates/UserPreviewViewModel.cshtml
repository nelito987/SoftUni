@model Twitter.Web.Models.ViewModels.UserPreviewViewModel

<div class="col-sm-5 col-md-3">
    <div class="thumbnail">
        <div class="caption">
            <h3 id="thumbnail-label">
                <a href="#"><span>@Model.Fullname</span></a>
            </h3>
        </div>
        <div>
            @if (@Model.IsFollowed)
            {
                <button id="@Model.Id" username="@Model.Username" class="btn btn-lg btn-danger unfollow">Unfollow</button>
            }
            else
            {
                <button id="@Model.Id" username="@Model.Username" class="btn btn-lg btn-success follow">Follow</button>
            }
        </div>
    </div>
</div>